---
const pageTitle = "susu/books"
import SocialLinks from '../components/SocialLinks.astro';
import { bookList } from '../data/bookList';
import LoaderWrapper from '../layouts/LoaderWrapper.tsx';
import './styles/global.css';
---
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bungee&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width" />
        <title>{pageTitle}</title>
    </head>
    <body class="background">
        <LoaderWrapper client:load>
            <div class="container">
                <header class="space-between">
                    <p class="font-600 font-bold">books</p>
                    <p class="font-increase font-bold"><a href="/">susu</a></p>
                </header>
                <h2 class="mt--large la-machine">books</h2>
                <p class="mt--small">books i would read twice</p>
                <div style="margin: 2rem; padding: .8rem; " class="la-machine">
                    <blockquote>"my life changed and i never finished the book"</blockquote>
                    <blockquote style="text-align: right"><a class="font-eigth grey-white underline" href="https://x.com/simonsarris/status/1781836092812988436">it's like that sometimes!</a></blockquote>
                </div>
                <div class="note box mt--large">
                    <ul class="la-machine font-eigth" style="display: flex; flex-direction: column; gap: 1rem">
                        {bookList.map(book => (
                            <li>
                                <a href={book.url}>{book.title} / </a>{book.author}
                            </li>
                        ))}
                    </ul>
                </div>
                <footer>
                    <SocialLinks />
                </footer>
            </div>
        </LoaderWrapper>
    </body>
 </html>
